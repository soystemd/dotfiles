[general]

# Seconds with no input before cava goes to sleep mode. Cava will not perform FFT or drawing and
# only check for input once per second. Cava will wake up once input is detected. 0 = disable.
sleep_timer = 60

[smoothing]

# Disables or enables the so-called "Monstercat smoothing"
# with or without "waves". Set to 0 to disable.
monstercat = 1
waves = 0

# Set gravity percentage for "drop off".
# Higher values means bars will drop faster.
# Accepts only non-negative values. 50 means half gravity,
# 200 means double. Set to 0 to disable "drop off".
gravity = 200

[input]

method = fifo
source = /tmp/mpd.fifo
sample_rate = 44100
sample_bits = 16

# method = pulse
# source = auto

# vim:ft=conf
