set selection-clipboard clipboard
set window-title-basename 1
set statusbar-basename 1
set recolor

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map g goto top

set recolor-lightcolor "#181818"
set inputbar-bg "#181818"
set default-bg "#181818"
set statusbar-bg "#181818"
set notification-error-bg "#181818"
set recolor-darkcolor "#aaaaaa"
set statusbar-fg "#aaaaaa"
set inputbar-fg "#aaaaaa"
set notification-error-fg "#a95551"
