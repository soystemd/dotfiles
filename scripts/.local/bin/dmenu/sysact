#!/bin/bash
# this script asks you for a system action.
# requires my choices script.

# config
prompt="System action:"
reboot_prompt="Reboot to:"

items="
 Lock      : lock,
鈴 Sleep    : nap,
⏻ Poweroff  : dmenu-prompt 'Poweroff?' 'sudo -A shutdown -h now',
 Reboot    : reboot_choices,
 Logout    : dmenu-prompt 'Logout?' 'pkill -x xinit',
"

reboot_items="
 Artix   : dmenu-prompt 'Reboot?' 'sudo -A shutdown -r now',
 Windows : dmenu-prompt 'Reboot?' 'sudo -A grub-reboot Windows; sudo -A shutdown -r now',
 Devuan  : dmenu-prompt 'Reboot?' 'sudo -A grub-reboot Devuan; sudo -A shutdown -r now',
"

reboot_choices () {
    eval "$(choices "$reboot_prompt" "$reboot_items")"
}

eval "$(choices "$prompt" "$items" "$1")"
